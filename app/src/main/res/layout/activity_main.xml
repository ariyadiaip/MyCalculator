<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResultLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="60sp"
        android:gravity="right"
        android:layout_above="@id/tvResultSmall"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvResultSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="23sp"
        android:gravity="right"
        android:layout_above="@id/tabCalculator"
        android:layout_margin="10dp"/>

    <GridLayout
        android:id="@+id/tabCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_above="@id/btnResult">
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="C"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/btnDivider"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="/"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="1"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="3"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/btnMultiplier"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="x"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>
        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="."
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="0"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>
        <Button
            android:id="@+id/btnMin"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="-"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>
    </GridLayout>
    <Button
        android:id="@+id/btnResult"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="="
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"/>

</RelativeLayout>